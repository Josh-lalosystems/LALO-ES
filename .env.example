# LALO Demo example environment variables
# Copy this file to `.env` and edit values as needed for your environment.
# IMPORTANT: Never commit your real `.env` with secrets to source control.

# Mode: demo | production
MODE=demo

# Service endpoints (for local mock connectors, update to real endpoints when available)
RTI_URL=http://localhost:8101
MCP_URL=http://localhost:8102
CREATION_URL=http://localhost:8103

S4_MOCK_URL=http://localhost:8201
WORKDAY_MOCK_URL=http://localhost:8202
SHAREPOINT_MOCK_URL=http://localhost:8203

# Vector store option: 'sklearn' (demo) or 'faiss' / 'chroma' / 'weaviate'
VECTOR_STORE=sklearn

# Local model usage flag (set true if you have local GPT-OSS / HRM installed and configured)
USE_LOCAL_MODELS=false

# Optional: Azure AD / Microsoft SSO settings (leave blank for mock SSO)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_REDIRECT_URI=http://localhost:8000/auth/callback

# Optional: OpenAI or external model provider keys (used only if plugin configured)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
