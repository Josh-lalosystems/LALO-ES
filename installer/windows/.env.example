# LALO AI Platform - Configuration Template

# ================================================================================
# APPLICATION SETTINGS
# ================================================================================

# Environment mode (development, production)
APP_ENV=production

# Server port (default: 8000)
PORT=8000

# Host binding (0.0.0.0 = all interfaces, 127.0.0.1 = localhost only)
HOST=127.0.0.1

# ================================================================================
# SECURITY
# ================================================================================

# JWT Secret Key (CHANGE THIS! Use a random 32+ character string)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_DO_NOT_USE_DEFAULT

# Encryption key for API keys in database (CHANGE THIS!)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_THIS_TO_A_FERNET_KEY

# ================================================================================
# DATABASE
# ================================================================================

# SQLite database file location
DATABASE_URL=sqlite:///./data/lalo.db

# ================================================================================
# AI MODEL SETTINGS
# ================================================================================

# Model directory (where downloaded models are stored)
MODEL_DIR=./models

# Default model for simple requests
DEFAULT_SIMPLE_MODEL=tinyllama

# Default model for complex requests
DEFAULT_COMPLEX_MODEL=openchat

# Default model for code generation
DEFAULT_CODE_MODEL=deepseek-coder

# Default model for math/finance
DEFAULT_MATH_MODEL=metamath

# ================================================================================
# API KEYS (Optional - Users can add these via Settings page)
# ================================================================================

# These are optional and can be left blank
# Users will add their own API keys through the web interface

# OpenAI API Key (optional, for cloud models)
# OPENAI_API_KEY=

# Anthropic API Key (optional, for Claude models)
# ANTHROPIC_API_KEY=

# ================================================================================
# LOGGING
# ================================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=./logs/lalo.log

# ================================================================================
# DEVELOPMENT MODE (Set to false for production!)
# ================================================================================

# Demo mode (bypasses authentication - DEVELOPMENT ONLY!)
DEMO_MODE=false

# Enable debug logging
DEBUG=false

# ================================================================================
# ADVANCED SETTINGS
# ================================================================================

# Maximum tokens for model responses
MAX_TOKENS=2048

# Request timeout (seconds)
REQUEST_TIMEOUT=60

# Enable CORS (for development with separate frontend)
ENABLE_CORS=false

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# ================================================================================
# MODEL DOWNLOAD SETTINGS
# ================================================================================

# Auto-download models on first run (true/false)
AUTO_DOWNLOAD_MODELS=false

# Download priority (1 = essential only, 2 = include optional)
MODEL_DOWNLOAD_PRIORITY=1
